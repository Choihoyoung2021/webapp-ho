<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <!-- 환영 파일 설정 -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file> <!-- 기본 페이지로 index.jsp 설정 -->
    </welcome-file-list>

    <!-- 서블릿 설정 -->
    <servlet>
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>kr.ac.kku.cs.wp.seok.demo.HelloServlet</servlet-class>
        <init-param>
            <param-name>greeting</param-name>
            <param-value>Hello, World from ServletConfig!</param-value>
        </init-param>
    </servlet>

    <servlet-mapping>
        <servlet-name>HelloServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>

    <!-- 필터 설정 -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>kr.ac.kku.cs.wp.seok.aaa.AuthenticationFilter</filter-class>
        <init-param>
            <param-name>valve</param-name>
            <param-value>on</param-value>
        </init-param>
    </filter>

    <!-- 필터 매핑 -->
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/jsp/user/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/jsp/admin/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/logout</url-pattern>
    </filter-mapping>

</web-app>
